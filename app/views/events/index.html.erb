<style>
  th, tr, td {
    padding:20px;
  }
  th {
    font-weight: bold;
    font-size: 1.2em;
  }
</style>

<p id="notice"><%= notice %></p>

<fieldset>
 <legend><h1>Events</h1></legend>

  <table>
    <thead>
      <tr>
        <th>Name:</th>
        <th>Description:</th>
        <th>Cost:</th>
        <th>Location:</th>
        <th>Host:</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.cost %></td>
          <td><%= event.location %></td>
          <td><%= event.user.full_name %></td>

          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button style="padding:7px 15px 7px 15px;border-radius:20px;background-color:green;"><%= link_to 'Add New Event', new_event_path, style: 'text-decoration:none;color:white;' %></button><br>
</fieldset>
